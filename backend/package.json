{
  "name": "bua-com-xanh-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node src/server.js",
    "start:test": "cross-env NODE_ENV=test node -r dotenv/config src/server.js dotenv_config_path=.env.test",
    "seed": "node src/seed.js",
    "test:db:reset": "node src/seed_full.js",
    "test": "node scripts/run-tests-and-log.cjs",
    "test:verbose": "node scripts/run-tests-and-log.cjs --mode=verbose",
    "test:report": "npm test && echo '\n✅ Báo cáo test đã được tạo tại: test-reports/'",
    "test:integration": "node IntegrationTest/runner.js",
    "test:integration:jest": "cross-env NODE_ENV=test DB_DRIVER=mysql NODE_OPTIONS=--experimental-vm-modules npx jest --config=jest.integration.config.js",
    "test:integration:all": "node IntegrationTest/runner.js all",
    "test:integration:auth": "node IntegrationTest/runner.js auth",
    "test:integration:metrics": "node IntegrationTest/runner.js metrics",
    "test:integration:campaigns": "node IntegrationTest/runner.js campaigns",
    "test:integration:users": "node IntegrationTest/runner.js users",
    "test:integration:admin": "node IntegrationTest/runner.js admin",
    "open:report": "node scripts/open-report.cjs"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^5.20.2",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
